<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/collect_cover"
        android:layout_width="106dp"
        android:layout_height="60dp"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:placeholderImage="@drawable/cover2" />

    <TextView
        android:id="@+id/collect_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@id/collect_cover"
        app:layout_constraintTop_toTopOf="@id/collect_cover" />

    <TextView
        android:id="@+id/collect_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textColor="@color/tabColor"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/collect_cover"
        app:layout_constraintStart_toEndOf="@id/collect_cover" />
</androidx.constraintlayout.widget.ConstraintLayout>
