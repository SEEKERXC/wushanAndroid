<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/video_detail_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="视频标题"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/video_detail_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:text="播放数/其他信息"
            android:textSize="14sp" />

        <LinearLayout
            android:id="@+id/video_detail_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/video_detail_collect"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="8dp"
                android:background="@color/white"
                android:scaleType="centerInside"
                android:src="@drawable/shoucang" />

            <TextView
                android:id="@+id/video_detail_collect_num"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginStart="4dp"
                android:text="250" />

            <ImageButton
                android:id="@+id/video_detail_download"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="40dp"
                android:background="@color/white"
                android:scaleType="centerInside"
                android:src="@drawable/download" />

            <TextView
                android:id="@+id/video_detail_download_num"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginStart="4dp"
                android:text="2231" />

            <ImageButton
                android:id="@+id/video_detail_dislike"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="40dp"
                android:background="@color/white"
                android:scaleType="centerInside"
                android:src="@drawable/dislike" />

            <TextView
                android:id="@+id/video_detail_dislike_num"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginStart="4dp"
                android:text="448" />
        </LinearLayout>

        <me.gujun.android.taggroup.TagGroup
            android:id="@+id/video_detail_tags"
            style="@style/TagGroup"
            android:layout_marginStart="8dp"
            app:atg_borderColor="@color/white"
            app:atg_textColor="@color/exo_black_opacity_30"
            app:atg_textSize="14sp"
            app:atg_verticalSpacing="6dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/detail_related_videos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
</ScrollView>
