<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cn.ninanina.wushanvideo">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".WushanApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.me.CollectActivity"></activity>
        <activity android:name=".ui.home.SearchActivity" />
        <activity
            android:name=".ui.me.SettingsActivity"
            android:label="@string/title_activity_settings" />
        <activity android:name=".ui.me.ProfileActivity" />
        <activity
            android:name=".ui.me.LoginActivity"
            android:theme="@style/AppTheme.Full" />

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-2117487515590175~1101840862" />

        <activity
            android:name=".ui.video.VideoDetailActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenSize|screenLayout|smallestScreenSize|uiMode"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>